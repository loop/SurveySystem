<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.yogeshn.fyp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="19"
        tools:ignore="GradleOverrides,OldTargetApi" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light.NoActionBar" >
        <activity
            android:name="com.yogeshn.fyp.androidclient.activities.QuestionActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".androidclient.activities.TutorialQuestionnaireActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".androidclient.activities.FinishedQuestionnaireActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".androidclient.activities.ConnectActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:windowSoftInputMode="stateAlwaysHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".androidclient.activities.LoginPatientDetailActivity"
            android:label="@string/title_activity_patient_detail"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name="com.yogeshn.fyp.androidclient.activities.AvailableQuestionnairesActivity"
            android:label="@string/title_activity_available_questionnaires" >
        </activity>
    </application>

</manifest>
